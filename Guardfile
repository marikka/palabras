# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'slim', :input_root => 'slim', :output_root => '.', :slim => { :pretty => true } do
  watch(%r'^.+\.slim$')
end

guard 'sass', :input => 'sass', :output => 'css'

guard 'coffeescript', :input => 'coffee', :output => 'js'

