  head
    meta charset="utf-8"
  body
    #app

      h1 Palabras!
      #manage

        h2 Manage words
        form id="newWord"
          input type="text" id="word-fi" placeholder="suomeksi" required=""
          input type="text" id="word-es" placeholder="espanjaksi" required=""
          button id="add" Lisää sana
        table
          thead
            tr
              td Suomeksi
              td Espanjaksi
              td Osaaminen
              td Viimeeksi kysytty
          tbody
      #train
        h2 Train words
        span id="currentWord"
        form id="train"
          input type="text" id="answerWord" placeholder="vastaus"
          button Vastaa

