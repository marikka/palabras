#app
  .container
    .row
      .span6
        header
          a(href="/")
            img(src="img/logo.png")
      .span6
        div#language-selector
          .btn-group
            a(class="dropdown-toggle btn", data-toggle="dropdown", href="#")
              span #{__i("Select language")} 
              b(class="caret")
            ul(class="dropdown-menu")
              li
                a(href="/setlocale/fi") #{__i("Finnish")}
              li
                a(href="/setlocale/en") #{__i("English")}
      .span12
        div(class="alert alert-info")
          button(type="button", class="close", data-dismiss="alert") x
          strong #{__i("welcome")}
          p #{__i("introduction")}

        ul(class="nav nav-pills")
          li(class="active")
            a(href="#train", data-toggle="tab") #{__i("Practice")}
          li
            a(href="#manage", data-toggle="tab") #{__i("Vocabulary")}
        div(class="tab-content")
          
          div(class="tab-pane active", id="train")
            form(id="answer", class="well form-inline")
              div(id="question")
              input(type="text", id="answerWord", placeholder="#{__i("In Spanish")}", required="", autocomplete="off")
              button(class="btn btn-primary")
                i(class="icon-ok icon-white")
                |  #{__i("Answer")}
            table.table(id="answers")
              thead
                tr
                  th(class="span3") #{__i("Question")}
                  th(class="span3") #{__i("Answer")}
                  th(class="span6") #{__i("Correct answer")}
              tbody                       
              
          div(class="tab-pane", id="manage")
            form(id="newWord", class="well form-inline")
              input(type="text", id="word-fi", placeholder="#{__i("In Finnish")}", required="", autocomplete="off")
              input(type="text", id="word-es", placeholder="#{__i("In Spanish")}", required="", autocomplete="off")
              button(class="btn btn-primary", id="add")
                i(class="icon-plus icon-white")
                |  #{__i("Add word")}
            table.table.table-striped
              thead
                tr
                  th(class="span3") #{__i("In Finnish")}
                  th(class="span3") #{__i("In Spanish")}
                  th(class="span3") #{__i("Rating")}
                  th(class="span2") #{__i("Last asked")}
                  th(class="span1") #{__i("Actions")}
              tbody
#templates(style="display:none;")
  table
    tbody
      tr(id="word")
        td.fi
        td.es
        td
          .progress
            .rating.bar
        td.lastAsked
        td.actions
          a(class="btn btn-small btn-danger delete", type="button")
            i(class="icon-trash icon-white")
            |  #{__i("Delete")}
      tr.trainword
        td.question
        td.answer
        td.correctAnswer

